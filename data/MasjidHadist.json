[
    {
        "Id": 1,
        "HadistContent": "\"Amal itu tergantung niatnya, dan seseorang mendapatkan (balasan) sesuai niatnya\"",
        "HadistFrom": "(HR. Bukhari No.1 & Muslim No.3530)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-10 06:44:29.603 +00:00",
        "updatedAt": "2023-11-07 15:10:28.377 +00:00"
    },
    {
        "Id": 13,
        "HadistContent": "\"Dan Allah menghalalkan jual beli dan mengharamkan riba\"",
        "HadistFrom": "(QS. Al-Baqarah: 275)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-16 14:13:18.966 +00:00",
        "updatedAt": "2023-11-07 15:10:33.820 +00:00"
    },
    {
        "Id": 14,
        "HadistContent": "\"Hai orang-orang yang beriman, janganlah kamu memakan riba dengan berlipat ganda dan bertakwalah kamu kepada Allah supaya kamu mendapat keberuntungan\"",
        "HadistFrom": "(QS. Ali Imran: 130)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-16 14:14:04.767 +00:00",
        "updatedAt": "2023-11-07 15:10:41.113 +00:00"
    },
    {
        "Id": 16,
        "HadistContent": "\"Amalan yang paling dicintai Allah adalah amalan yang rutin dilakukan meskipun sedikit\"",
        "HadistFrom": "(HR. Bukhari No.6464 & Muslim No.783)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-16 14:15:21.554 +00:00",
        "updatedAt": "2023-11-07 15:10:50.789 +00:00"
    },
    {
        "Id": 17,
        "HadistContent": "\"Tidak akan masuk surga orang yang memutuskan tali silaturahmi\"",
        "HadistFrom": "(HR. Bukhari No.5984 & Muslim No.2556)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-16 14:16:03.931 +00:00",
        "updatedAt": "2023-11-07 15:10:55.028 +00:00"
    },
    {
        "Id": 18,
        "HadistContent": "\"Sesungguhnya Allah 'Azza wa Jalla senantiasa menerima taubat hamba, selagi nafas belum sampai tenggorokan\"",
        "HadistFrom": "(HR. Ibnu Majah dan dihasankan oleh Al-Albani)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-16 14:16:59.993 +00:00",
        "updatedAt": "2023-11-07 15:11:03.726 +00:00"
    },
    {
        "Id": 19,
        "HadistContent": "\"Sesungguhnya Allah itu maha indah dan menyukai keindahan\"",
        "HadistFrom": "(HR. Muslim No.91)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-16 14:17:40.034 +00:00",
        "updatedAt": "2023-11-07 15:11:07.119 +00:00"
    },
    {
        "Id": 20,
        "HadistContent": "\"Sebaik-baik kalian adalah yang mempelajari Al-Quran dan mengajarkannya\"",
        "HadistFrom": "(HR. Bukhari No.5027)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-16 14:18:04.729 +00:00",
        "updatedAt": "2023-11-07 15:11:09.774 +00:00"
    },
    {
        "Id": 24,
        "HadistContent": "\"Mencela seorang muslim adalah kefasikan sedang membunuhnya adalah kekafiran\"",
        "HadistFrom": "(HR. Ahmad Shahih Al Jaami No.3595)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-23 04:26:23.268 +00:00",
        "updatedAt": "2023-11-07 15:11:14.772 +00:00"
    },
    {
        "Id": 26,
        "HadistContent": "“Tidak sempurna iman seseorang, sehingga dia mencintai saudaranya seperti mencintai dirinya sendiri”",
        "HadistFrom": "(HR. Bukhari No.13 & Muslim No.45)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-23 04:36:10.405 +00:00",
        "updatedAt": "2023-11-07 15:11:22.530 +00:00"
    },
    {
        "Id": 27,
        "HadistContent": "“Orang yang menunjukkan jalan kebaikan, mendapat pahala seperti yang melakukannya”",
        "HadistFrom": "(HR. Muslim No.1893)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-23 04:37:05.059 +00:00",
        "updatedAt": "2023-11-07 15:11:27.696 +00:00"
    },
    {
        "Id": 28,
        "HadistContent": "\"Maka sesungguhnya bersama kesulitan itu ada kemudahan\"",
        "HadistFrom": "(QS. Al Insyirah: 5)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-23 07:50:23.733 +00:00",
        "updatedAt": "2023-11-07 15:11:32.973 +00:00"
    },
    {
        "Id": 29,
        "HadistContent": "\"Orang mukmin yang paling sempurna imannya adalah yang paling baik akhlaknya\"",
        "HadistFrom": "(HR Abu Daud No.4682 & Ibnu Majah No.1162.)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-23 07:52:00.581 +00:00",
        "updatedAt": "2023-11-07 15:11:38.639 +00:00"
    },
    {
        "Id": 30,
        "HadistContent": "\"Tidak boleh seorang laki-laki berduaan dengan perempuan kecuali dengan ditemani mahramnya\"",
        "HadistFrom": "(HR. Bukhari No.5233 & Muslim No.1341)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-23 07:56:33.994 +00:00",
        "updatedAt": "2023-11-07 15:11:43.827 +00:00"
    },
    {
        "Id": 31,
        "HadistContent": "\"Wahai orang-orang yang beriman, jadikanlah sabar dan salat sebagai penolongmu. Sesungguhnya Allah beserta orang-orang yang sabar\"",
        "HadistFrom": "(QS. Al Baqarah:153)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-27 02:44:24.836 +00:00",
        "updatedAt": "2023-11-07 15:11:49.790 +00:00"
    },
    {
        "Id": 32,
        "HadistContent": "\"Apabila shalat telah dilaksanakan, maka bertebaranlah kamu di bumi; carilah karunia Allah dan ingatlah Allah banyak-banyak agar kamu beruntung\"",
        "HadistFrom": "(QS. Al-Jumu'ah:10)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-28 07:14:36.463 +00:00",
        "updatedAt": "2023-11-07 15:11:55.191 +00:00"
    },
    {
        "Id": 33,
        "HadistContent": "“Jika sudah dikumandangkan iqamah, maka tidak ada shalat kecuali shalat wajib” ",
        "HadistFrom": "(HR. Muslim No. 710)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-28 07:32:35.111 +00:00",
        "updatedAt": "2023-11-07 15:12:00.153 +00:00"
    },
    {
        "Id": 34,
        "HadistContent": "“Jika salah seorang di antara kalian masuk masjid, maka janganlah ia langsung duduk sampai mengerjakan shalat dua rakaat” ",
        "HadistFrom": "(HR. Bukhari No.444 & Muslim No.714)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-28 07:34:19.865 +00:00",
        "updatedAt": "2023-11-07 15:12:04.700 +00:00"
    },
    {
        "Id": 36,
        "HadistContent": "\"Barangsiapa membangun masjid maka Allah akan membangunkan rumah untuknya di surga\"",
        "HadistFrom": "(HR. Muslim No.5298)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-29 07:10:57.370 +00:00",
        "updatedAt": "2023-11-07 15:12:10.842 +00:00"
    },
    {
        "Id": 37,
        "HadistContent": "\"Dunia adalah penjara bagi orang mukmin dan surga bagi orang kafir\"",
        "HadistFrom": "(HR. Muslim No.5256)",
        "CreatedBy": null,
        "ModifiedBy": null,
        "createdAt": "2023-10-29 07:13:40.041 +00:00",
        "updatedAt": "2023-10-29 07:13:40.041 +00:00"
    }
]